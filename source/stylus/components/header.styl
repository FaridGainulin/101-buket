.header
  &__container
    display: flex
    justify-content space-between
    align-items: center
    +above($breakpoints.sm)
      align-items: flex-start

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block
      flex-basis: 40%
      margin-top 21px
    +above($breakpoints.md)
      margin-top 22px
    +above($breakpoints.xxl)
      margin-top 23px

  &__logo
    width 74px
    height: auto
    +above($breakpoints.sm)
      width 90px
    +above($breakpoints.md)
      width 100px
    +above($breakpoints.xxl)
      width 113px

  &__connection
    display: flex
    align-items: center
    justify-content flex-end
    gap: 6px
    +above($breakpoints.sm)
      flex-basis: 40%
      gap: 7px;
      margin-top 22px
    +above($breakpoints.md)
      gap: 9px;
      margin-top 24px
    +above($breakpoints.xxl)
      gap: 11px
      margin-top 25px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 13px
      height: 13px
    +above($breakpoints.md)
      width 14px
      height: 14px
    +above($breakpoints.xxl)
      width 15px
      height: 15px
