.calculation-section
  background-image: url('../images/calculation-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #E48FAD

  &__container
    position relative
    user-select: none
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 110px 0 106px

  &__title,
  &__text,
  &__block-result
    text-align: center

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 68px

  &__custom-select
    position relative
    width 280px
    margin 0 auto
    +above($breakpoints.sm)
      width 380px
    +above($breakpoints.md)
      width 480px
    +above($breakpoints.xxl)
      width 580px

  &__select-header
    width 100%
    border-radius: 5px
    background-color #D87698
    display: flex
    align-items: center
    justify-content space-between
    padding 15px 20px
    cursor pointer
    +above($breakpoints.sm)
      border-radius: 8px
      padding 20px 30px
    +above($breakpoints.md)
      border-radius: 12px
      padding 25px 35px
    +above($breakpoints.xxl)
      border-radius: 15px
      height: 81px
      padding 27px 42px

  &__select-icon
    width 12px
    height: 7px
    +above($breakpoints.sm)
      width 16px
      height: 9px
    +above($breakpoints.md)
      width 20px
      height: 11px
    +above($breakpoints.xxl)
      width 24px
      height: 13px

  &__select-options
    display: none
    position: absolute
    top: 100%
    left: 0
    width: 100%
    background-color: #D87698
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1)
    z-index: 10
    border-radius: 8px
    padding: 10px 20px
    +above($breakpoints.sm)
      padding 10px 30px
    +above($breakpoints.md)
      padding 10px 35px
    +above($breakpoints.xxl)
      padding 10px 42px

  &__select-options.show
    display: block

  &__select-options li
    padding: 5px 0
    cursor: pointer
    transition: background 0.2s
    +above($breakpoints.sm)
      padding 7px 0
    +above($breakpoints.md)
      padding 8px 0
    +above($breakpoints.xxl)
      padding 10px 0

  &__select-options li:hover
    color: #ee99b6

  &__text
    padding 15px 0
    +above($breakpoints.sm)
      padding 30px 0
    +above($breakpoints.md)
      padding 40px 0
    +above($breakpoints.xxl)
      padding 57px 0 56px
      height: 170px

  &__custom-range
    position: relative;
    width: 280px;
    margin: 0 auto;
    +above($breakpoints.sm)
      width 600px
    +above($breakpoints.md)
      width 780px
    +above($breakpoints.xxl)
      width 980px

  &__custom-range-track
    position: relative;
    width: 100%;
    height: 6px;
    background-color: #D87698;
    border-radius: 6px;
    +above($breakpoints.sm)
      height: 8px
    +above($breakpoints.md)
      height: 10px
    +above($breakpoints.xxl)
      height: 12px

  &__custom-range-progress
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 0%;
    background: linear-gradient(90deg, #d53980 0%, #a1285d 100%);
    border-radius: 6px;

  &__custom-range-thumb
    position: absolute;
    top: 50%;
    transform: translate(-50%, -50%);
    width: 12px;
    height: 12px;
    background-color: white;
    border: 1px solid #D93A83;
    border-radius: 50%;
    cursor: pointer;
    left: 0;
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      border: 2px solid #D93A83;
      width 20px
      height: 20px
    +above($breakpoints.xxl)
      border: 3px solid #D93A83;
      width 24px
      height: 24px

  &__months
    display: flex
    align-items: center
    justify-content space-between
    margin 15px auto 20px
    width 304px
    +above($breakpoints.sm)
      width 630px
      margin 20px auto 30px
    +above($breakpoints.md)
      width 810px
      margin 25px auto 40px
    +above($breakpoints.xxl)
      width 1020px
      margin 31px auto 57px
    span
      display: flex
      justify-content center
      align-items: center
      width 25px
      height: 25px
      border-radius: 50%
      cursor pointer
      +above($breakpoints.sm)
        width 30px
        height: 30px
      +above($breakpoints.md)
        width 35px
        height: 35px
      +above($breakpoints.xxl)
        width 46px
        height: 46px

  &__months span.active
    font-family: 'Montserrat-Bold';
    background-color: rgba(255, 255, 255, 0.25)

  &__block-result
    width 150px
    margin 0 auto
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    border-bottom: 1px solid #DB5E92
    padding-bottom 5px
    +above($breakpoints.sm)
      padding-bottom 8px
      width 235px
      gap: 15px
    +above($breakpoints.md)
      width 300px
      gap: 20px
    +above($breakpoints.xxl)
      gap: 28px
      width 385px
