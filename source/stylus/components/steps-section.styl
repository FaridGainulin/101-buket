.steps-section
  background-image: url('../images/steps-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #fff

  &__container
    position relative
    z-index 1
    padding 140px 0 20px
    color: $color-black-text
    +above($breakpoints.sm)
      padding 120px 0 30px
    +above($breakpoints.md)
      padding 190px 0 60px
    +above($breakpoints.xxl)
      padding 219px 0 93px

  &__block-feedback
    width 100%
    position: absolute
    left: 0
    display: flex
    flex-direction: column
    align-items: center
    background: linear-gradient(321deg, #151616 0%, #585858 100%);
    color: #fff
    border-radius: 5px
    gap: 10px
    top: -181px
    padding 15px 14px
    +above($breakpoints.sm)
      align-items: flex-start
      border-radius: 8px
      gap: 20px
      top: -135px
      padding 35px 40px 25px
    +above($breakpoints.md)
      border-radius: 12px
      gap: 30px
      top: -162px
      padding 45px 60px 35px
    +above($breakpoints.xxl)
      border-radius: 15px
      gap: 36px
      top: -191px
      height: 320px
      padding 55px 80px 49px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px
    input
      width 280px !important
      +above($breakpoints.sm)
        width 170px !important
      +above($breakpoints.md)
        width 200px !important
      +above($breakpoints.xxl)
        width 240px !important

  &__form-column
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    width 280px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      gap: 10px
      width 350px
    +above($breakpoints.md)
      width 415px
      gap: 15px
    +above($breakpoints.xxl)
      width 500px
      gap: 20px

  &__box
    display: flex
    flex-direction: column-reverse
    align-items: center
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 54px
    +above($breakpoints.md)
      gap: 111px
    +above($breakpoints.xxl)
      gap: 120px

  &__block-images
    overflow hidden
    +above($breakpoints.sm)
      margin-top 5px
    +above($breakpoints.md)
      margin-top 10px
    +above($breakpoints.xxl)
      margin-top 14px

  &__block-images,
  &__image
    width 280px !important
    +above($breakpoints.sm)
      width 280px !important
    +above($breakpoints.md)
      width 380px !important
    +above($breakpoints.xxl)
      width 480px !important

  &__img
    width 100%
    height: auto
    border-radius: 5px
    +above($breakpoints.sm)
      border-radius: 8px
    +above($breakpoints.md)
      border-radius: 12px
    +above($breakpoints.xxl)
      border-radius: 15px

  &__title,
  &__bottom,
  &__block-feedback
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 0 0 15px
    +above($breakpoints.sm)
      padding 0 0 30px
    +above($breakpoints.md)
      padding 0 0 40px
    +above($breakpoints.xxl)
      padding 0 0 52px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      gap: 14px 20px;
      width 370px
    +above($breakpoints.md)
      gap: 40px 50px
      width 450px
    +above($breakpoints.xxl)
      gap: 52px 70px
      width 550px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      align-items: flex-start
      width: 175px !important;
      gap: 6px;
    +above($breakpoints.md)
      width: 200px !important;
      gap: 8px;
    +above($breakpoints.xxl)
      width 230px !important
      gap: 10px

  &__card-title
    display: flex
    justify-content center
    align-items: center
    border-radius: 22px
    background: linear-gradient(90deg, #d93a83 0%, #a1285d 100%);
    color: #fff
    width: 110px;
    height: 26px;
    padding-bottom 5px
    +above($breakpoints.sm)
      justify-content start
      padding: 0 0 7px 13px;
      width: 114px;
      height: 28px;
    +above($breakpoints.md)
      padding: 0 0 7px 15px;
      width: 144px;
      height: 33px;
    +above($breakpoints.xxl)
      padding 0 0 11px 18px
      width 180px
      height: 44px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    +above($breakpoints.sm)
      flex-direction: row
      align-items: flex-start
      gap: 66px
      margin-top 30px
    +above($breakpoints.md)
      margin-top 40px
      gap: 200px
    +above($breakpoints.xxl)
      margin-top 57px
      gap: 236px

  &__bottom-form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      gap: 10px
      width 350px
    +above($breakpoints.md)
      width 415px
      gap: 15px
    +above($breakpoints.xxl)
      width 500px
      gap: 20px
    input
      width 280px !important
      +above($breakpoints.sm)
        width 170px !important
      +above($breakpoints.md)
        width 200px !important
      +above($breakpoints.xxl)
        width 240px !important
    button
      width 280px !important
      +above($breakpoints.sm)
        width 100% !important
