.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    padding 80px 0 20px
    color: $color-black-text
    +above($breakpoints.sm)
      padding 70px 0 30px
    +above($breakpoints.md)
      padding 120px 0 60px
    +above($breakpoints.xxl)
      padding 177px 0 99px

  &__images-block
    position: absolute
    top: -78px;
    right: 94px;
    +above($breakpoints.sm)
      top: -132px;
      right: -81px;
    +above($breakpoints.md)
      top: -163px;
      right: -100px;
    +above($breakpoints.xxl)
      top: -203px;
      right: -200px;

  &__blocks
    +above($breakpoints.sm)
      display: flex
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__block
    width 120px !important
    +above($breakpoints.sm)
      width 170px !important
    +above($breakpoints.md)
      width 230px !important
    +above($breakpoints.xxl)
      width 280px !important

  &__img
    width 100%
    height: 133px
    border-radius: 5px
    +above($breakpoints.sm)
      height: auto
      border-radius: 8px
    +above($breakpoints.md)
      border-radius: 12px
    +above($breakpoints.xxl)
      border-radius: 15px

  &__box
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 10px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      flex-direction: row
      align-items: flex-end
      justify-content space-between

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 25px
    +above($breakpoints.md)
      padding-bottom 35px
    +above($breakpoints.xxl)
      padding-bottom 45px

  &__text
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 15px
    +above($breakpoints.md)
      gap: 19px
    +above($breakpoints.xxl)
      gap: 24px

  &__box-right
    display: flex
    flex-direction: column
    gap: 8px
    +above($breakpoints.sm)
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 25px

  &__rectangle
    width 308px
    padding 15px 5px
    border-radius: 5px
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background: linear-gradient(321deg, #151616 0%, #585858 100%);
    color: #fff
    +above($breakpoints.sm)
      align-items: flex-start
      border-radius: 8px
      width: 300px;
      gap: 8px;
      padding: 25px 5px 30px 20px;
    +above($breakpoints.md)
      border-radius: 12px
      width: 390px;
      gap: 12px;
      padding: 30px 5px 40px 25px;
    +above($breakpoints.xxl)
      border-radius: 15px
      width 480px
      height: 207px
      gap: 16px
      padding 35px 5px 49px 35px
    &--green
      background: linear-gradient(321deg, #4c6a43 0%, #588e5c 100%);

  &__title-2,
  &__card,
  &__bottom
    text-align: center

  &__title-2
    padding 30px 0 15px
    +above($breakpoints.sm)
      padding 50px 0 30px
    +above($breakpoints.md)
      padding 70px 0 50px
    +above($breakpoints.xxl)
      padding 105px 0 60px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    height: 90px
    background-color #fff
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    border-radius: 5px
    gap: 5px
    +above($breakpoints.sm)
      gap: 7px
      border-radius: 8px
      width 235px !important
      height: 107px
    +above($breakpoints.md)
      gap: 9px
      border-radius: 12px
      width: 308px !important;
      height: 136px
    +above($breakpoints.xxl)
      gap: 10px
      border-radius: 15px
      width 380px !important
      height: 180px

  &__bottom
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      margin-top 30px
    +above($breakpoints.md)
      margin-top 50px
    +above($breakpoints.xxl)
      height: 234px
      margin-top 70px

  &__bottom-text
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 20px 0 30px
    +above($breakpoints.xxl)
      padding 30px 0 40px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 188px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 260px !important
