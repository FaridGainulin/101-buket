  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s
  &:hover
    border 1px solid #4C6A43
  &:focus
    color: #3D261B
    caret-color: #4C6A43
    border 1px solid #4C6A43
    box-shadow: 3px 3px 8px 0px #4C6A43
    &::placeholder
      color: rgba(35, 35, 35, 0.5)
  &::placeholder
    color: rgba(35, 35, 35, 0.5)
  +above($breakpoints.sm)
    padding: 0 20px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    border-radius: 10px
    padding: 0 25px;
    font-size: 16px;
    height: 55px
  +above($breakpoints.xxl)
    padding: 0 30px;
    font-size: 18px;
    height: 60px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 30px
    resize: none
    height: 70px
    width 280px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 20px
      width 286px
      height: 110px
    +above($breakpoints.md)
      padding: 17px 10px 10px 25px
      width 415px
      height: 125px;
    +above($breakpoints.xxl)
      padding: 20px 10px 10px 30px
      width 500px
      height: 140px
