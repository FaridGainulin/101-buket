.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: right, center;
  background-color #E48FAD
  +above($breakpoints.sm)
    background-position: center

  &__container
    position relative
    z-index 1
    padding 20px 0 330px
    +above($breakpoints.sm)
      padding 15px 0 50px
    +above($breakpoints.md)
      padding 18px 0 90px
    +above($breakpoints.xxl)
      padding 22px 0 119px
    &:after
      content: ""
      position: absolute
      z-index 0
      background-color rgba(255, 150, 195, 0.5)
      border-radius: 50%
      filter: blur(200px);
      width: 200px;
      height: 200px;
      top: 431px;
      left: 0;
      +above($breakpoints.sm)
        width: 300px;
        height: 300px;
        top: 168px;
        left: 257px;
      +above($breakpoints.md)
        width: 400px;
        height: 400px;
        top: 192px;
        left: 315px;
      +above($breakpoints.xxl)
        width 487px
        height: 487px
        top: 219px
        left: 363px

  &__block
    position: absolute
    background-image: url('../images/main-section-block-bg.png')
    background-repeat: no-repeat
    background-size: cover
    background-position: center
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    text-align: center
    width: 170px;
    height: 170px;
    top: 405px;
    left: -12px;
    +above($breakpoints.sm)
      width: 220px;
      height: 220px;
      top: 227px;
      left: 225px;
    +above($breakpoints.md)
      width: 270px;
      height: 270px;
      top: 298px;
      left: 280px;
    +above($breakpoints.xxl)
      width 313px
      height: 313px
      top: 359px
      left: 334px

  &__img
    position: absolute
    width 280px
    height: auto
    bottom: 0
    left: 45px
    +above($breakpoints.sm)
      width: 473px;
      left: 288px;
    +above($breakpoints.md)
      width: 630px;
      left: 350px;
    +above($breakpoints.xxl)
      width 773px
      left: 410px

  &__title,
  &__sub-title,
  &__text
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding 20px 0 10px
    +above($breakpoints.sm)
      padding 30px 0 15px
    +above($breakpoints.md)
      padding 40px 0 17px
    +above($breakpoints.xxl)
      padding 50px 0 20px

  &__sub-title
    position relative
    z-index 1

  &__text
    padding 10px 0
    +above($breakpoints.sm)
      padding 30px 0 15px
    +above($breakpoints.md)
      padding 40px 0 20px
    +above($breakpoints.xxl)
      padding 52px 0 29px

  &__form
    display: flex
    flex-direction: column
    margin 0 auto
    width 280px
    gap: 7px
    +above($breakpoints.sm)
      margin 0
      width 235px
      gap: 10px
    +above($breakpoints.md)
      width 275px
      gap: 15px
    +above($breakpoints.xxl)
      width 330px
      gap: 20px
