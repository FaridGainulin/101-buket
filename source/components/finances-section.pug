              img.finances-section__img(src="images/finances-section-img-1.jpg" loading="lazy" width="560" height="620" alt="image")
            .finances-section__block.swiper-slide
              img.finances-section__img(src="images/finances-section-img-2.jpg" loading="lazy" width="560" height="620" alt="image")
            .finances-section__block.swiper-slide
              img.finances-section__img(src="images/finances-section-img-3.jpg" loading="lazy" width="560" height="620" alt="image")
